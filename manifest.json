{
    "manifest_version": 2,
    "name": "LFRemover",
    "version": "0.0.0",
    "description": "Remove line feed from clip board",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon16.png",
        "128": "icon/icon16.png"
    },
  
    "browser_action": {
        "default_icon": {
            "16": "icon/icon16.png"
        },
        "default_title": "start_process",
        "default_popup": "popup.html"
    },
  
    "author": "Naohiro Heya",
    "permissions": ["clipboardRead"],
    "background": {
        "scripts":[
            "event.js"
        ],
        "persistent": false
    }
  }